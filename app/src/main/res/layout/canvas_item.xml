<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#F5F5F5"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_canvas_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/item_canvas_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_canvas_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="CanvasName"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_canvas_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Size:x X x" />

        <TextView
            android:id="@+id/item_canvas_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Updated At:xx" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:clickable="true"
        android:src="@drawable/ic_item_menu" />
</RelativeLayout>