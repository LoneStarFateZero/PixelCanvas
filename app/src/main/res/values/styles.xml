<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeMain" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="NavTextSize">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/zpix</item>
    </style>

    <style name="ProfileActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="TabLayoutTheme" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:fontFamily">@font/zpix</item>
    </style>
</resources>
